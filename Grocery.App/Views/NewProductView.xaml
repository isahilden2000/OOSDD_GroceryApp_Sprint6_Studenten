<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.NewProductView"
             Title="Nieuw product">

    <StackLayout Padding="20">
        <Entry Placeholder="Naam" Text="{Binding Name}" />
        <Entry Placeholder="Voorraad" Keyboard="Numeric" Text="{Binding Stock}" />
        <Entry Placeholder="Prijs" Keyboard="Numeric" Text="{Binding Price}" />
        <DatePicker Date="{Binding ShelfLife}" />
        <Button Text="Opslaan" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>